    <script>
        const cvBtn = document.getElementById('cv-btn');
        const portfolioBtn = document.getElementById('portfolio-btn');
        const cvSection = document.getElementById('cv-section');
        const portfolioSection = document.getElementById('portfolio-section');

        // Function to update button styles
        function updateButtonStyles(activeBtn, inactiveBtn) {
            activeBtn.classList.remove('bg-gray-200', 'text-gray-800', 'hover:bg-gray-300', 'focus:ring-gray-400');
            activeBtn.classList.add('bg-blue-600', 'text-white', 'hover:bg-blue-700', 'focus:ring-blue-500');

            inactiveBtn.classList.remove('bg-blue-600', 'text-white', 'hover:bg-blue-700', 'focus:ring-blue-500');
            inactiveBtn.classList.add('bg-gray-200', 'text-gray-800', 'hover:bg-gray-300', 'focus:ring-gray-400');
        }

        // Show CV section by default
        cvSection.classList.remove('hidden');
        portfolioSection.classList.add('hidden');
        updateButtonStyles(cvBtn, portfolioBtn);


        cvBtn.addEventListener('click', () => {
            cvSection.classList.remove('hidden');
            portfolioSection.classList.add('hidden');
            updateButtonStyles(cvBtn, portfolioBtn);
        });

        portfolioBtn.addEventListener('click', () => {
            portfolioSection.classList.remove('hidden');
            cvSection.classList.add('hidden');
            updateButtonStyles(portfolioBtn, cvBtn);
        });
    </script>

